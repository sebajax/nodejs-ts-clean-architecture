{
  "name": "nodejs-ts-clean-architecture",
  "version": "1.0.0",
  "private": true,
  "description": "This archetype will help in the project building using Node.js and TypeScript.",
  "author": "Sebastian Ituarte",
  "scripts": {
    "dev": "nodemon -L ./src/app.ts",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "test": "mocha --require ts-node/register src/test/**/*.test.ts --recursive",
    "test_dist": "mocha dist/test --recursive",
    "coverage": "nyc npm run test",
    "coverage_dist": "nyc npm run test_dist",
    "pretest": "npm run compile",
    "posttest": "npm run lint",
    "prepare": "npm run compile",
    "prettier_check": "npx prettier --check ./src",
    "prettier_write": "npx prettier --write ./src",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@cloudnative/health-connect": "^2.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.14",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "20.12.7",
    "@types/sinon": "^17.0.3",
    "@types/validator": "^13.11.9",
    "chai": "^5.1.0",
    "cross-env": "^7.0.3",
    "gts": "^5.3.0",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.0",
    "nyc": "^15.1.0",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  }
}
